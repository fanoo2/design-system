{
  "name": "@fanno/design-system",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "!dist/**/__tests__/**",
    "!dist/**/*.test.*",
    "!dist/**/*.stories.*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --project design-system/tsconfig.json",
    "prepare": "npm run build",
    "lint": "eslint design-system/src --ext .ts,.tsx --max-warnings=0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:legacy": "node design-system/test/index.js",
    "test:smoke": "node tests/smoke/smoke-test.js",
    "storybook": "storybook dev -p 6006 --config-dir design-system/.storybook",
    "build-storybook": "storybook build --config-dir design-system/.storybook",
    "serve": "npx http-server storybook-static -p 6006",
    "health": "curl -f http://localhost:6006/ || exit 1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@storybook/addon-controls": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/cli": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-webpack5": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-loader": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "storybook": "^8.6.14",
    "style-dictionary": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": ">=4.7.4 <5.6.0"
  }
}
